# MCP Stack Environment Configuration Template
# Copy this file to .env and fill in your actual values
# Generated on deployment date

# =================
# Database Passwords
# =================
POSTGRES_PASSWORD=changeme_use_strong_password
REDIS_PASSWORD=changeme_use_strong_password
NEO4J_PASSWORD=changeme_use_strong_password

# =================
# API Keys & Tokens
# =================

# GitHub Integration
GITHUB_TOKEN=ghp_your_github_personal_access_token

# AI & Search Services
PERPLEXITY_API_KEY=pplx-your_perplexity_api_key
SEMANTIC_SCHOLAR_API_KEY=your_semantic_scholar_key
CONTEXT7_API_KEY=your_context7_api_key
YOUTUBE_API_KEY=your_youtube_data_api_v3_key

# Vector Databases
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX=your_index_name

# Productivity Tools
NOTION_TOKEN=secret_your_notion_integration_token
EVERART_API_KEY=your_everart_api_key

# Monitoring
GRAFANA_URL=http://your-grafana-instance:3000
GRAFANA_API_KEY=your_grafana_api_key

# Azure (if using Azure services)
AZURE_SUBSCRIPTION_ID=your_subscription_id
AZURE_TENANT_ID=your_tenant_id
AZURE_CLIENT_ID=your_client_id
AZURE_CLIENT_SECRET=your_client_secret

# =================
# Service Configuration
# =================

# Default timezone for time service
DEFAULT_TIMEZONE=America/New_York

# 3D Printer (if applicable)
PRINTER_TYPE=ender3
OCTOPRINT_URL=http://octopi.local
OCTOPRINT_API_KEY=your_octoprint_api_key

# Everything Search (Windows Search)
EVERYTHING_HOST=192.168.1.100
EVERYTHING_PORT=2121

# =================
# Resource Limits
# =================
MEMORY_LIMIT=16G
CPU_LIMIT=8

# =================
# Network Configuration
# =================
SUBNET=172.20.0.0/16
GATEWAY=172.20.0.1

# Terramaster specific
TERRAMASTER_IP=192.168.1.50  # Replace with your actual IP